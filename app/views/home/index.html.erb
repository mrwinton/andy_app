<h2>Get an image, we'll check if there's Andy in it</h2>

<% flash.each do |key, msg| %>
    <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_#{key}" %>
<% end %>

<%= form_tag '/andy/process', { :multipart => true } do %>
    <p>
    <%= file_field_tag 'upload[file]' %>
    </p>
    <p>
      <%= submit_tag "r u andy?" %>
    </p>
<% end %>
